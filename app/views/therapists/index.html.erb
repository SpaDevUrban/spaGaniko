<p id="notice"><%= notice %></p>

<h1>Therapists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Cpf</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @therapists.each do |therapist| %>
      <tr>
        <td><%= therapist.name %></td>
        <td><%= therapist.surname %></td>
        <td><%= therapist.email %></td>
        <td><%= therapist.cpf %></td>
        <td><%= therapist.phone1 %></td>
        <td><%= therapist.phone2 %></td>
        <td><%= link_to 'Show', therapist %></td>
        <td><%= link_to 'Edit', edit_therapist_path(therapist) %></td>
        <td><%= link_to 'Destroy', therapist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

